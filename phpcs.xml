<?xml version="1.0"?>
<ruleset name="BerriartSitemapBundle">
    <description>BerriartSitemapBundle PHP Coding Standard</description>

    <file>./</file>
    <exclude-pattern>*/Resources/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>

    <rule ref="vendor/leaphub/phpcs-symfony2-standard/leaphub/phpcs/Symfony2/ruleset.xml"/>

    <rule ref="Symfony2.Commenting.ClassComment">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="Symfony2.Commenting.FunctionComment">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="Zend.NamingConventions.ValidVariableName">
    </rule>

</ruleset>
